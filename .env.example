# Server Configuration
PORT=8000
NODE_ENV=development

# Security
# Generate a secure secret with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-secure-random-jwt-secret-here

# CORS Configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:8000,http://localhost:3000,https://your-production-domain.vercel.app

# Database
DATABASE_PATH=./database.db

# Admin Configuration
# IMPORTANT: Change these values immediately after first deployment!
ADMIN_USERNAME=admin
ADMIN_DEFAULT_PASSWORD=change-this-password-immediately
FORCE_PASSWORD_CHANGE=true
